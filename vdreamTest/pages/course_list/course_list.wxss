.course_list{
  display: flex;
  border-bottom: 1px solid #eee; 
}
.course_image_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.course_image_wrap image{
  width: 70%;
}
.course_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.course_info_wrap .course_name{
    /* 如果course名超过两行的长度，用...表示超出部分*/
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.course_info_wrap .course_price{
  color: black;
  font: italic;
  font-size: 52rpx;
}

.no_available_course{
  font-size: 36rpx;
  text-align: center;
  margin-top: 60%;
  margin-top: 30%;
  justify-content: center;
  color: red;
  font-weight: bold;
}