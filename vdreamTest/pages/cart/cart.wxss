@import "../../styles/weui.wxss";
/* 全局checkbox大小 */
.cart_content checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  margin-top: 60rpx; 
}

/* 购物车内容 */
.cart_title{
  font-size: 42rpx;
  font-weight: bold;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc; 
}
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.cart_img_wrap{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap{
  flex: 3;
}
.cart_img_wrap image{
  width: 70%;
}
.cart_info_wrap{
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_info_wrap .course_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top: 20rpx;
}
/* .goods_price_wrap{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
} */

.course_price{
  /* color: var(--themeColor); */
  color: red;
  font-size: 20rpx;
  margin-bottom: 70rpx;
}
.cart_num_tool{
  display: flex;
}

/* 底部工具栏 */
.footer_tool{
  width: 100vw;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  border-top: 1rpx solid #ccc;
}


.footer_tool checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  margin-top: 25rpx;
  margin-left: 15rpx;
}

.footer_tool .select_all_text
{
  margin-top: 25rpx;
}

.order_pay_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}

.all_chk_wrap{
  flex: 2;
  background-color: #FFCC99;
  /* background-repeat: repeat;
  background-image: '../../images/Klematis-ljubicast.jpg'; */
}


.total_price_wrap{
  flex: 5;
  flex-direction: column;
  align-items: flex-end;
  font-size: 24rpx;
  background-color: #FFCC99;
  /* background-repeat: repeat;
  background-image: '../../images/Klematis-ljubicast.jpg'; */
}
.total_price_wrap .total_price{
  font-size: 34rpx;
  margin-top: 5%;
  margin-left: 40%;
}
.total_price_wrap .total_price_text{
  /* color: var(--themeColor); */
  color: #2f2f2f;
  font-weight: bold;
  font-size: 34rpx;
}
.order_pay_wrap{
  flex: 3;
  color: #fff;
  font-size: 34rpx;
  /* background-color: var(--themeColor); */
  background-color: #FFC300;


}