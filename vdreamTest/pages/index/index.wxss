/* swiper */
.index_swiper swiper{
  height: 250rpx;
}
.index_swiper image{
  width: 100%;
}


/* 导航 */
.index_category{
  display: flex;
}
.index_category navigator{
  flex: 1;
  padding: 20rpx;
}
.index_category image{
  width: 100%;
}

/* 内容 */
.floor_list{
  overflow: hidden;
  padding-bottom: 10rpx;
}
.floor_list navigator{
  float: left;
  width: 33.33%;
  height: 33.33vw;
  border-right: 10rpx solid #fff;
  padding-top: 10rpx;
  border-bottom: 10rpx solid #fff;
}
.content_title{
  padding: 10rpx 0;

}
